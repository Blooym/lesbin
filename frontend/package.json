    "author": {
        "name": "Blooym",
        "url": "https://blooym.dev"
    },
    "version": "0.1.0",
    "license": "MIT",
    "engineStrict": true,
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "vite dev",
        "build": "vite build",
        "preview": "vite preview --host",
