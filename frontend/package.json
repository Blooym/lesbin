        "@types/node": "^24",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-svelte": "^3.13.1",
        "globals": "^16.5.0",
        "prettier": "^3.7.4",
        "prettier-plugin-svelte": "^3.4.1",
        "svelte": "^5.46.0",
        "svelte-check": "^4.3.4",
        "svelte-highlight": "^7.9.0",
        "typescript": "^5.9.3",
